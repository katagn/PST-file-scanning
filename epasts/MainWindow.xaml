<Window x:Class="epasts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:epasts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="Choose PST files" Click="SelectPstFiles_Click" Margin="0,5"/>
            <Button Content="Choose folder for saving" Click="SelectOutputFolder_Click" Margin="0,5"/>
            <Button Content="Start processing" Click="StartProcessing_Click" Margin="0,5"/>
            <ProgressBar Name="ProcessingProgressBar" Height="20" Margin="0,10,0,0" Minimum="0" Maximum="100"/>
            <TextBlock Name="StatusTextBlock" Margin="0,5" Text="Statuss: Processing not started"/>
        </StackPanel>

    </Grid>
</Window>
